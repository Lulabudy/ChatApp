<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingRight="60dp"
    android:paddingLeft="15dp"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/textViewChatName"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="Nombre"
        android:textColor="@color/black"/>

    <!--android:layout_toRightOf="@+id/avatar"
        android:layout_alignTop="@+id/avatar" -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewChatName"
        android:layout_alignLeft="@+id/textViewChatName"
        android:id="@+id/linearLayoutFiles"
        android:orientation="horizontal"
        android:background="@drawable/rectangle_white"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:elevation="2dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewChatFileIcon"
            android:background="@drawable/ic_file"
            android:layout_gravity="center"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewChatFileName"
            android:textColor="@color/black"

            android:textSize="18dp"
            android:text="Mensaje de 17 cara..."
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:layout_below="@id/linearLayoutFiles"
        android:layout_alignLeft="@id/linearLayoutFiles">

        <TextView
            android:text="fecha"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:id="@+id/textViewFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>

</RelativeLayout>
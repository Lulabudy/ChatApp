<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingRight="60dp"
    android:paddingLeft="15dp"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/textViewChatName"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="Nombre"
        android:textColor="@color/black"/>

    <!--android:layout_toRightOf="@+id/avatar"
        android:layout_alignTop="@+id/avatar" -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMessage"
        android:layout_below="@+id/textViewChatName"
        android:layout_alignLeft="@+id/textViewChatName"
        android:background="@drawable/rectangle_white"
        android:textColor="@color/black"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:elevation="2dp"
        android:textSize="18dp"
        android:text="Este es un mensaje bastante largo para comprobar como encaja en el chat"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:layout_below="@id/textViewMessage"
        android:layout_alignLeft="@id/textViewMessage">

        <TextView
            android:text="fecha"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:id="@+id/textViewFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>

</RelativeLayout>
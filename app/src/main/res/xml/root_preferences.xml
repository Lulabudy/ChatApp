<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/preference_privacy">

        <SwitchPreferenceCompat
            app:key="online"
            app:defaultValue="true"
            app:summaryOff="@string/preference_online_sum"
            app:summaryOn="@string/preference_online_sum"
            app:title="@string/preference_online" />

        <SwitchPreferenceCompat
            app:key="read"
            app:defaultValue="true"
            app:summaryOff="@string/preference_read_receipt_sum"
            app:summaryOn="@string/preference_read_receipt_sum"
            app:title="@string/preference_read_receipt" />

    </PreferenceCategory>

</PreferenceScreen>